<!DOCTYPE html>
<html lang="@UICulture">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Rafael Staib</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link rel="shortcut icon" href="~/favicon.png">
        <!--link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/ico/apple-touch-icon-144-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
        <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png"-->
        
        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="@Url.Content("~/cdn/scripts/html5shiv.js")"></script>
        <![endif]-->
        
        <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet" type="text/css">
        @Styles.Render("~/cdn/styles/base")
    </head>
    <body>
        <a name="top"></a>

        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <h1>
                        <a href="@Url.Action("Index", "Home")">Rafael Staib</a>
                    </h1>
                
                    <nav>
                        <ul>
                            <li>@Html.ActionLink("About", "Index", "Home")</li>
                            <li>@Html.ActionLink("Blog", "Index", "Home")</li>
                            <li class="active">@Html.ActionLink("Projects", "Index", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Index", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        
        <header id="overview" class="banner" role="banner">
            @RenderSection("header", required: true)
        </header>
        
        <div id="body">
            @RenderBody()
        </div>

        <footer>
            <div class="container">
                <div class="row">
                    <div class="span12 clearfix">
                        <p style="float: left;">&copy; Rafael J. Staib @DateTime.Now.Year</p>
                        <p style="float: right;">
                            <a href="#top">Back to top</a>
                        </p>
                    </div>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/cdn/scripts/base")
        @RenderSection("scripts", required: false)
    </body>
</html>